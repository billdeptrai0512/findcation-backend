# Server Configuration
PORT=3333
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/findcation?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=1d

# Google OAuth
OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend URL (for email links, etc.)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
# 5MB in bytes (5 * 1024 * 1024)

# Rate Limiting (optional, defaults are in middleware)
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
# Options: error, warn, info, http, debug

# Security
BCRYPT_ROUNDS=10

# Cron Jobs
ENABLE_CRON_JOBS=true
